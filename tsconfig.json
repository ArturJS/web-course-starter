{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "esnext",
        "allowJs": true,
    },
    "include": [
        "./src/**/*"
    ]
}